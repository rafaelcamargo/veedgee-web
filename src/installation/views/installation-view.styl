@import '@mixins'

.v-installation-view
  h1
    margin-top 30px
    &+ p
      margin-top 20px
  section
    margin-top 30px
  ol
    li
      span
        display inline-block
      &:not(:first-child)
        margin-top 16px
  .v-icon-share
    position relative
    bottom -5px
    width 28px
    height 28px
  .v-logo
    margin 10px 0 20px
  .v-footer
    margin-top 50px

+breakpoint('sm')
  .v-installation-view
    .v-container
      margin 0 auto
      max-width 600px
